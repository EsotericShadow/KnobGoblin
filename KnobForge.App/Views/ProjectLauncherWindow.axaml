<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="KnobForge.App.Views.ProjectLauncherWindow"
    x:CompileBindings="False"
    Width="1020"
    Height="680"
    MinWidth="860"
    MinHeight="560"
    Title="KnobForge Projects">
    <Grid RowDefinitions="Auto,*,Auto">
        <Border Grid.Row="0"
                Background="#11161A"
                BorderBrush="#2A3138"
                BorderThickness="0,0,0,1"
                Padding="14,12">
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Grid.Column="0" Spacing="3">
                    <TextBlock Text="KnobForge Projects"
                               FontSize="21"
                               FontWeight="SemiBold"
                               Foreground="#E6EEF5"/>
                    <TextBlock Text="Choose a project to continue, or create a new one."
                               FontSize="12"
                               Foreground="#A9B4BF"/>
                </StackPanel>

                <StackPanel Grid.Column="1"
                            Orientation="Horizontal"
                            Spacing="8"
                            VerticalAlignment="Center">
                    <Button x:Name="NewProjectButton"
                            Content="New Project"
                            MinWidth="108"/>
                    <Button x:Name="OpenSelectedProjectButton"
                            Content="Open Selected"
                            MinWidth="118"/>
                    <Button x:Name="BrowseProjectButton"
                            Content="Browse..."
                            MinWidth="92"/>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1"
                Background="#0D1216"
                Padding="12">
            <ListBox x:Name="ProjectListBox"
                     Background="#0D1216"
                     BorderBrush="#2A3138"
                     BorderThickness="1"
                     CornerRadius="8"
                     Foreground="#E6EEF5">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#2A3138"
                                BorderThickness="0,0,0,1"
                                Padding="10,10">
                            <Grid ColumnDefinitions="126,*" ColumnSpacing="12">
                                <Border Grid.Column="0"
                                        Width="122"
                                        Height="122"
                                        CornerRadius="8"
                                        Background="#182129"
                                        BorderBrush="#33414F"
                                        BorderThickness="1">
                                    <Grid>
                                        <Image Source="{Binding Thumbnail}"
                                               Stretch="UniformToFill"/>
                                        <Border Background="#10161C99"/>
                                        <TextBlock Text="Preview"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Foreground="#A9B4BF"
                                                   FontSize="11"/>
                                    </Grid>
                                </Border>

                                <StackPanel Grid.Column="1"
                                            VerticalAlignment="Center"
                                            Spacing="4">
                                    <TextBlock Text="{Binding DisplayName}"
                                               FontSize="16"
                                               FontWeight="SemiBold"
                                               Foreground="#E6EEF5"/>
                                    <TextBlock Text="{Binding SavedDisplay}"
                                               FontSize="12"
                                               Foreground="#A9B4BF"/>
                                    <TextBlock Text="{Binding FilePath}"
                                               FontSize="11"
                                               Foreground="#708294"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <Border Grid.Row="2"
                Background="#11161A"
                BorderBrush="#2A3138"
                BorderThickness="0,1,0,0"
                Padding="12,8">
            <TextBlock x:Name="LauncherStatusTextBlock"
                       FontSize="12"
                       Foreground="#A9B4BF"
                       Text=""/>
        </Border>
    </Grid>
</Window>
